@model PetRental.WebMVC1.Models.TemporaryAdopt

@{
    ViewBag.Title = "Return";
}
<br />
<br />
<h2>Create A Pet Return Transaction</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

