                @Html.ValidationMessageFor(model => model.PetId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RentalDuration, "Rental Duration Actual", htmlAttributes: new { @class = "control-label col-md-2" })
