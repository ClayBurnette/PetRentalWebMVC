                @Html.EditorFor(model => model.RentalDuration, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RentalDuration, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RentalCost, "Rental Cost Actual", htmlAttributes: new { @class = "control-label col-md-2" })
